<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="@dimen/list_item_width"
    android:layout_width="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="1.5dp"
    app:cardUseCompatPadding="true"
    android:layout_gravity="end"
    app:cardBackgroundColor="@color/bg_color_pair">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical|end"
            android:id="@+id/linearLayout"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="Elia"
                android:textColor="@color/text_color_pair"
                android:id="@+id/git_hub_user_login"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="ilya.razuvaev@hotmail.com"
                android:textColor="@color/text_color_pair"
                android:id="@+id/git_hub_user_email"
                android:singleLine="true"
                android:maxWidth="200dp" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/avatar_width"
            android:layout_height="match_parent"
            android:id="@+id/git_hub_user_avatar"
            android:padding="10dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/civ_border_color"
            android:layout_gravity="end"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout" />

    </LinearLayout>

</android.support.v7.widget.CardView>
